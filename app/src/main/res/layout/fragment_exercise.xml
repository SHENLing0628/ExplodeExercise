<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shenling.explodeexercise.Exercise"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="爆破安全知识练习"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:background="@color/colorTheme"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/exercise_for_today_layout"/>

            <include layout="@layout/exercise_test_options"/>

            <include layout="@layout/exercise_question_type"/>

            <include layout="@layout/exercise_history"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
